{
  "manifest_version": 3,
  "name": "Like/View % on YouTube Thumbnails",
  "version": "1.0.0",
  "description": "Displays a Like ÷ View percentage on YouTube™ video thumbnails.",
  "author": "Gnadri (fork of elliotwaite)",
  "icons": {
    "96": "icons/icon96.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": "icons/icon96.png",
    "default_title": "Settings",
    "default_popup": "options.html"
  },
  "options_ui": {
    "page": "options.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.youtubekids.com/*",
    "https://www.googleapis.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*",
        "*://*.youtubekids.com/*"
      ],
      "exclude_matches": [
        "*://studio.youtube.com/*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["css/text-percentage.css"],
      "matches": ["*://*.youtube.com/*", "*://*.youtubekids.com/*"]
    }
  ]
}
